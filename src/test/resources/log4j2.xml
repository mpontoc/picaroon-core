<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
	<Properties>
		<Property name="logPath">target/log</Property>
	</Properties>

	<CustomLevels>
		<CustomLevel name="LOG" intLevel="100" />
	</CustomLevels>

	<Appenders>
		<RollingFile name="RollingFile"
			filename="${logPath}/execution.log"
			filepattern="${logPath}/execution.log.%i">
			<PatternLayout
				pattern="%d{yyyy-MM-dd-HH:mm:ss}  [%t] %-5level %logger{36} - %msg%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20">
				<Delete basePath="${logPath}/" maxDepth="1">
					<IfAll>
						<IfFileName glob="exection*.log*">
							<IfLastModified age="1m">
								<IfAny>
									<IfAccumulatedFileCount exceeds="1" />
								</IfAny>
							</IfLastModified>
						</IfFileName>
					</IfAll>
				</Delete>
			</DefaultRolloverStrategy>

		</RollingFile>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd-HH:mm:ss}  [%t] %-5level %logger{36} - %msg%n" />
		</Console>
	</Appenders>

	<Loggers>
		<Root>
			<AppenderRef ref="RollingFile" level="log" />
			<AppenderRef ref="Console" level="log" />
		</Root>
	</Loggers>
</Configuration>